{
    "use app-layout in app-component": {
        "prefix": "aph-1",
        "body": "<app-layout></app-layout>"
    },
    "use app-header in layout": {
        "prefix": "lah-1",
        "body": "<app-header></app-header>"
    },
    "fill header": {
        "prefix": "heh-1",
        "body": [
            "<div id=\"Header\">",
            "\t",
            "</div>"
        ]
    },
    "write header title": {
        "prefix": "heh-2",
        "body": "\t<div class=\"title\"><span routerLink=\"/\">My Bank</span></div>"
    },
    "use routing outlet in layout": {
        "prefix": "lah-2",
        "body": "<router-outlet></router-outlet>"
    },
    "write account title": {
        "prefix": "ach-1",
        "body": "<h2>Account Page</h2>"
    },
    "use panel component": {
        "prefix": "ach-2",
        "body": [
            "<p-panel>",
            "\t<p-header>",
            "\t\t<span class=\"ui-panel-title\">My account</span>",
            "\t\t<button style=\"float: right;\" type=\"\">Detail</button>",
            "\t</p-header>",
            "</p-panel>"
        ]
    },
    "use pButton": {
        "prefix": "ach-3",
        "body": "pButton label=\"Detail\""
    },
    "last transaction": {
        "prefix": "ach-4",
        "body": "Last transaction: 19.08.2017"
    },
    "balance": {
        "prefix": "ach-5",
        "body": "Balance: 1000"
    },
    "currency": {
        "prefix": "ach-6",
        "body": "Currency: USD"
    },
    "detail router link": {
        "prefix": "ach-7",
        "body": "[routerLink]=\"['./detail']\""
    },
    "define a data-table div": {
        "prefix": "adh-1",
        "body": [
            "<div class=\"data-table\">",
            "</div>"
        ]
    },
    "use p-datatable": {
        "prefix": "adh-2",
        "body": [
            "<p-dataTable>",
            "</p-dataTable>"
        ]
    },
    "define value in p-datatable": {
        "prefix": "adh-3",
        "body": "[value]=\"data$ | async\""
    },
    "use p-columns in p-datatable": {
        "prefix": "adh-4",
        "body": [
            "<p-column field=\"date\" header=\"Date\"></p-column>",
            "<p-column field=\"explanation\" header=\"Explanation\"></p-column>",
            "<p-column field=\"amount\" header=\"Amount\"></p-column>"
        ]
    },
    "use paginator in data table": {
        "prefix": "adh-5",
        "body": "[rows]=\"4\" [paginator]=\"true\""
    },
    /*
    	// Place your snippets for HTML here. Each snippet is defined under a snippet name and has a prefix, body and 
    	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
    	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
    	// same ids are connected.
    	// Example:
    	"Print to console": {
    		"prefix": "log",
    		"body": [
    			"console.log('$1');",
    			"$2"
    		],
    		"description": "Log output to console"
    	}
    */
}